<NavBar @isHomePage={{false}} />
<div class="container">
  <div class="row no-gutters user-data-row">
    <div class="col-11 col-sm-10 col-md-6 user-data-col">
      <div class="card user-card">
        <div class="card-image-wrapper">
          <img src="assets/images/red-background.jpg" alt="background img">
          <div class="icon-wrapper rounded-circle">
            <i class="far fa-user"></i>
          </div>
        </div>      
        <div class="container user-data-content">
          <form>
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" class="form-control" id="name"  name="name"  readonly="readonly">
              {{#if this.changeset.error.name}}
                <p class="text-danger">{{this.changeset.error.name.validation}}</p>
              {{/if}}
            </div>
            <div class="form-group">
              <label for="surname">Surname</label>
              <input type="text" class="form-control" id="surname" name="surname" readonly="readonly">
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" id="email" name="email" readonly="readonly" >
                {{#if this.changeset.error.email}}
                <p class="text-danger">{{this.changeset.error.email.validation}}</p>
              {{/if}}
            </div>
            {{#unless this.isUpdate}}
              <div class="form-group">
                <label for="pwd">New password</label>
                <input type="password" class="form-control" id="pwd" name="pswd" value={{this.changeset.pswd}}  >
                {{#if this.changeset.error.pswd}}
                  <p class="text-danger">{{this.changeset.error.pswd.validation}}</p>
                {{/if}}
              </div>

              <div class="form-group">
                <label for="pwd">Repeat password</label>
                <input type="password" class="form-control" id="rpwd" name="rpswd" value={{this.changeset.rpswd}} >
                  {{#if this.changeset.error.rpswd}}
                  <p class="text-danger">{{this.changeset.error.rpswd.validation}}</p>
                {{/if}}
              </div>
              <div class="button-wrapper">
              <button type="button" class="btn btn-success button">Save</button>
              <button type="button" class="btn btn-danger button" >Cancel</button>
            </div>
            {{/unless}}
            {{#if this.isUpdate}}
              <div class="button-wrapper">
                <button type="button" class="btn btn-success button" >Edit</button>
              </div>
            {{/if}}
          </form>
        </div>
      </div> 
    </div>
  </div>
</div>
