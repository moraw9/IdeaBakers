<div class="header content-frame buttom">
  <h1>Log in</h1>
</div>

<form>
  <div class="form-group">
    <label for="email">Email:</label>
    <input type="email" class="form-control" id="email" placeholder="Enter email" name="email" />
  </div>

  <div class="form-group">
    <label for="pwd">Password:</label>
    <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="pswd" />
  </div>

    <div class="form-group form-check">
      <label class="form-check-label check-box-text" for="remember">Remember me</label>
        <input id="remember" class="form-check-input" type="checkbox" name="remember" />
    </div>

  <div class="button-wrapper">
    <button type="submit" class="btn btn-success log-in-button">Log in!</button>
  </div>
</form>
