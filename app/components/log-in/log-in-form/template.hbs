<div class="header content-frame buttom">
    <h1>Log in</h1>
  </div>
  <form {{on "submit" this.authenticate}}>
    <div class="form-group">
      <label for="email">Email:</label>
      <input type="email" class="form-control" id="email" placeholder="Enter email" name="email" value={{this.identification}} onchange={{fn this.updateIdentification}}>
    </div>
    <div class="form-group">
      <label for="pswd">Password:</label>
      <input type="password" class="form-control" id="pswd" placeholder="Enter password" name="pswd" value={{this.password}} onchange={{fn this.updatePassword}}>
    </div>

      <div class="form-group form-check">
        <label class="form-check-label check-box-text">
          <input class="form-check-input" type="checkbox" name="remember"> Remember me
        </label>
      </div>
    <div class="button-wrapper">
      <button type="submit" class="btn btn-success button">Log in!</button>
    </div>
    {{#if this.errorMessage}}
      <p>{{this.errorMessage}}</p>
    {{/if}}
  </form>