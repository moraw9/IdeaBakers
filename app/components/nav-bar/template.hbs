<nav class="menu">
  <div class=" logo">IdeaBakers</div>
  <div class="main-menu">
    <div class="items-wrapper">
      {{#if @isHomePage}}
        <NavBar::SearchBar @value={{@query}} @onChange={{@setSearchQuery}} @isHomePage={{false}} />
      {{/if}}
      {{#if this.session.isAuthenticated}}
          <a href="" {{on "click" this.invalidateSession}}>Logout</a>
      {{else}}
        <LinkTo @route="log-in">
          <div class="log btn btn-outline-danger" >
              <div class="login">Log in  <span class="login-icon"><i class="far fa-user"></i></span></div>
          </div>
        </LinkTo>
      {{/if}}
    </div>
  </div>
</nav>